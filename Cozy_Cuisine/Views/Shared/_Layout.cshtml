<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cozy_Cuisine</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.css" /> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Cozy_Cuisine.styles.css" asp-append-version="true" />
    <link href="~/css/promo.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/84ccdc0b43.js" crossorigin="anonymous"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&family=Roboto+Flex:opsz,wght@8..144,100..1000&family=VT323&display=swap" rel="stylesheet">
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>

<body>  
    <header>
        <nav class="pnav navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow fixed-top" data-bs-theme="dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/img/logo.png" class="logoo img-fluid" alt="Alternate Text" />
                 </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 d-sm-inline-flex justify-content-evenly">
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Gallery">Gallery</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="News">News</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Contacts">Contact</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Credits">Credits</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Wiki">Wiki</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnav-link nav-link rounded-3 px-5" asp-area="" asp-controller="Home" asp-action="Download">Download</a>
                        </li>
                        <li class="nav-item">
                            <a class="pnbtn btn px-4 shadow-lg" asp-area="" asp-controller="Home" asp-action="UnderConstruction">Play Now</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0 m-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="promofooter border-top footer">
        <div class="container">
            &copy; 2025 Cozy Cuisine
        </div>
    </footer>
                                                               

    <script src="~/lib/jquery/dist/jquery.min.js"></script>@* 
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script> 
    <script src="~/js/carousel-init.js"></script>

    @* Visitor Counter one count per day *@
    <script>
        function setVisitorCookie() {
            if (!document.cookie.includes("visitor_tracked=true")) {
                fetch('/Manage/VisitorCount', { method: 'POST' }) // Call backend to log visit
                    .then(response => response.json())
                    .then(data => console.log("Visitor Counted:", data.success));

                document.cookie = "visitor_tracked=true; path=/; max-age=86400"; // Expires in 1 day
            }
        }

        setVisitorCookie(); // Run when page loads
    </script>
    @* Sweet Alert Success and Error *@
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var message = '@TempData["Success"]';
            if (message) {
                Swal.fire({
                    title: "Success!",
                    text: message,
                    icon: "success",
                    confirmButtonText: "OK"
                });
            }
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var message = '@TempData["Error"]';
            if (message) {
                Swal.fire({
                    title: "Error!",
                    text: message,
                    icon: "Error",
                    confirmButtonText: "OK"
                });
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
