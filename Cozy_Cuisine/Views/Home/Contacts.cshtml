                                                <ul class="list-unstyled">
                                                    @foreach (var url in faq.FAQURLImageList.Split(','))
                                                    {
                                                        <li>
                                                            <a href="@url" target="_blank" class="sampurl">@url  <i class="ms-2 fa-solid fa-arrow-up-right-from-square fa-sm" style="color: #5D4037;"></i></a>
